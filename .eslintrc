{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [1, 120, 2, {"ignoreComments": true}]
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "settings": {
        "react": {
            "version": "16.5"
        }
    }
}